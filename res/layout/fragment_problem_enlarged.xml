<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/problem_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cccccc"
    android:padding="30dp" >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#fff" >
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/enlarged_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_weight="0.5"
            android:text="App 4 Uganda"
            android:textColor="@color/blue"
            android:textSize="80dp" />

        <TextView
            android:id="@+id/enlarged_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="App 4 Uganda"
            android:textColor="@color/blue"
            android:textSize="60dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/enlarged_solution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginBottom="139dp"
        android:background="@color/blue"
        android:gravity="center"
        android:padding="5dp"
        android:text="Solution"
        android:textColor="#FFF"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/enlarged_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Problem"
        android:textColor="@color/blue"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/enlarged_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="21dp"
        android:text="Location"
        android:textColor="@color/blue"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/prog_user_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/enlarged_description"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="39dp"
        android:background="@drawable/round_img_proj"
        android:src="@drawable/medium" />

    <TextView
        android:id="@+id/enlarged_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enlarged_description"
        android:layout_centerHorizontal="true"
        android:text="ios android #design"
        android:textColor="@color/light_grey"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/enlarged_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/prog_user_image"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/prog_user_image"
        android:textColor="@color/blue"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />
</RelativeLayout>
</RelativeLayout>